{
  "permissions": {
    "allow": [
      "Bash(docker compose:*)",
      "Bash(gh api:*)",
      "Bash(gh issue create:*)",
      "Bash(gh issue edit:*)",
      "Bash(gh issue list:*)",
      "Bash(gh issue status:*)",
      "Bash(gh issue view:*)",
      "Bash(gh label list:*)",
      "Bash(gh pr checks:*)",
      "Bash(gh pr checkout:*)",
      "Bash(gh pr create:*)",
      "Bash(gh pr edit:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr view:*)",
      "Bash(gh run view:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git log:*)",
      "Bash(git push)",
      "Bash(git diff:*)",
      "Bash(uv run mypy:*)",
      "Bash(uv run pytest:*)",
      "Bash(uv run ruff:*)",
      "Bash(uv run cfn-lint:*)"
    ],
    "ask": [
      "Bash(gh issue close:*)",
      "Bash(gh pr merge:*)"
    ]
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "test -d \"$CLAUDE_PROJECT_DIR/.claude/rules/zeroae/.git\" || git -C \"$CLAUDE_PROJECT_DIR\" submodule update --init --recursive"
          },
          {
            "type": "command",
            "command": "test -d \"$CLAUDE_PROJECT_DIR/.venv\" || uv sync --all-extras --directory \"$CLAUDE_PROJECT_DIR\""
          },
          {
            "type": "command",
            "command": "command -v docker >/dev/null 2>&1 && docker compose -f \"$CLAUDE_PROJECT_DIR/docker-compose.yml\" up -d || true"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash(git commit:*)",
        "hooks": [
          {
            "type": "command",
            "command": "uv run --directory \"$CLAUDE_PROJECT_DIR\" mypy src/zae_limiter"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "file_path=$(echo \"$TOOL_INPUT\" | jq -r '.file_path // empty') && [[ \"$file_path\" == *.py ]] && uv run --directory \"$CLAUDE_PROJECT_DIR\" ruff check --fix \"$file_path\" && uv run --directory \"$CLAUDE_PROJECT_DIR\" ruff format \"$file_path\" || true"
          }
        ]
      }
    ]
  }
}
