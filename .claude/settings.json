{
  "permissions": {
    "allow": [
      "Bash(docker compose:*)",
      "Bash(export AWS_ENDPOINT_URL=http://localhost:4566 AWS_ACCESS_KEY_ID=test AWS_SECRET_ACCESS_KEY=test AWS_DEFAULT_REGION=us-east-1:*)",
      "Bash(gh api:*)",
      "Bash(gh issue create:*)",
      "Bash(gh issue edit:*)",
      "Bash(gh issue list:*)",
      "Bash(gh issue status:*)",
      "Bash(gh issue view:*)",
      "Bash(gh label list:*)",
      "Bash(gh pr checks:*)",
      "Bash(gh pr checkout:*)",
      "Bash(gh pr create:*)",
      "Bash(gh pr edit:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr view:*)",
      "Bash(gh run view:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git push)",
      "Bash(uv run cfn-lint:*)",
      "Bash(uv run mypy:*)",
      "Bash(uv run pytest:*)",
      "Bash(uv run python:*)",
      "Bash(uv run ruff:*)",
      "Bash(uv run mkdocs:*)",
      "Bash(uv run zae-limiter:*)",
      "Bash(gh pr diff:*)"
    ],
    "ask": [
      "Bash(AWS_PROFILE=* uv run zae-limiter delete:*)",
      "Bash(AWS_PROFILE=* uv run zae-limiter deploy:*)",
      "Bash(gh issue close:*)",
      "Bash(gh pr merge:*)"
    ]
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "test -d \"$CLAUDE_PROJECT_DIR/.venv\" || uv sync --all-extras --directory \"$CLAUDE_PROJECT_DIR\""
          },
          {
            "type": "command",
            "command": "command -v docker >/dev/null 2>&1 && docker compose -f \"$CLAUDE_PROJECT_DIR/docker-compose.yml\" up -d || true"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash(git commit:*)",
        "hooks": [
          {
            "type": "command",
            "command": "uv run --directory \"$CLAUDE_PROJECT_DIR\" mypy src/zae_limiter"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "file_path=$(echo \"$TOOL_INPUT\" | jq -r '.file_path // empty') && [[ \"$file_path\" == *.py ]] && uv run --directory \"$CLAUDE_PROJECT_DIR\" ruff check --fix \"$file_path\" && uv run --directory \"$CLAUDE_PROJECT_DIR\" ruff format \"$file_path\" || true"
          },
          {
            "type": "command",
            "command": "jq -re '.tool_input.file_path | select(endswith(\"pyproject.toml\"))' > /dev/null && uv sync --all-extras --directory \"$CLAUDE_PROJECT_DIR\" || true",
            "statusMessage": "Syncing dependencies..."
          }
        ]
      }
    ]
  }
}
